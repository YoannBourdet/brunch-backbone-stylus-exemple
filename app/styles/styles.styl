@import 'nib';

global-reset()
nested-reset()
reset-font()
reset-box-model()
reset-body()
reset-table()
reset-table-cell()
reset-html5()

*, *::before, *::after
    box-sizing border-box
body
    width: 100%
    background-color #f0f0f0
.wrapper
    width 1000px
    margin 0 auto
    padding-top 20px
    .hostel
        width 31%
        height 350px
        margin-bottom 20px
        margin-left 20px
        padding 10px
        float left
        overflow hidden
        background-color #fff
        box-shadow 0 3px 10px gray
        border 1px solid #fff
        border-radius  0 0 5px 5px
        transition all .3s ease
        &.list
            height 200px
            cursor pointer
            &:hover
                border 1px solid red
        h2
            height 60px
            text-align center
            color red
            text-transform uppercase
        img
            width 100%
            height auto
            margin-bottom 20px
        p
            font-size 18px
            margin-bottom 10px
        span
            display: block
        ul
            li